{
    "name": "enterprise-ecommerce-mern",
    "version": "1.0.0",
    "description": "Professional MERN Stack E-commerce Platform",
    "author": "Enterprise Team",
    "license": "MIT",
    "private": true,
    "workspaces": [
        "backend",
        "frontend"
    ],
    "scripts": {
        "install:all": "npm install && cd backend && npm install && cd ../frontend && npm install",
        "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
        "dev:backend": "cd backend && npm run dev",
        "dev:frontend": "cd frontend && npm run dev",
        "build": "npm run build:frontend",
        "build:frontend": "cd frontend && npm run build",
        "start": "cd backend && npm run start",
        "lint": "npm run lint:backend && npm run lint:frontend",
        "lint:backend": "cd backend && npm run lint",
        "lint:frontend": "cd frontend && npm run lint",
        "test": "npm run test:backend && npm run test:frontend",
        "test:backend": "cd backend && npm run test",
        "test:frontend": "cd frontend && npm run test",
        "clean": "rimraf node_modules backend/node_modules frontend/node_modules frontend/dist",
        "seed": "cd backend && node scripts/seed.js",
        "optimize": "cd backend && node scripts/optimize-production.js"
    },
    "devDependencies": {
        "concurrently": "^9.0.1",
        "rimraf": "^6.0.1"
    },
    "engines": {
        "node": ">=18.0.0",
        "npm": ">=9.0.0"
    },
    "dependencies": {
        "dotenv": "^17.3.1",
        "winston": "^3.19.0"
    }
}
